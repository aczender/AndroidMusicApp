<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="color">@color/statusBarColor</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- General style of the Activities -->
    <style name="GeneralActivities">
        <item name="android:background">@drawable/mobile_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- Style of the Descriptions -->
    <style name="Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- Style of the MainActivity -->
    <style name="MainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">20dp</item>

    </style>

    <!-- Style of the MediaLibraryActivity -->
    <style name="ListingStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CoverStyle">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="StoreStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style of the NowPlayingActivity -->
    <style name="PlayImageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>